class Solution {
    public int distanceBetweenBusStops(int[] distance, int start, int destination) {
        if (start < 0 || destination < 0) return -1;
        int i = start <= destination ? start : destination;
        int j = start >= destination ? start : destination;
        int count1 = 0;
        int count2 = 0;
        for (int n = 0; n < distance.length; n++) {
            if (i <= n && n < j) {
                count1 += distance[n];
            } else {
                count2 += distance[n];
            }
        }
        return count1 <= count2 ? count1 : count2;
    }
}
