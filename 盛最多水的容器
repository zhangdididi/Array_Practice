class Solution {
    public int maxArea(int[] height) {
        int left = 0, right = height.length - 1;
        int maxarea = 0;
        while (left < right) {
            int minlen = height[left] <= height[right] ? height[left] : height[right];
            maxarea = maxarea >= minlen * (right - left) ? maxarea : minlen * (right - left);
            if (height[left] < height[right]) {
                left++;
            } else {
                right--;
            }
        }
        return maxarea;
    }
}
